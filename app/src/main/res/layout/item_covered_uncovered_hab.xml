<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/rectangle2"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/done_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/circle_back"
            android:fontFamily="@font/raleway"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/raleway"
            android:padding="5dp"
            android:textColor="@color/Black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/less"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/less"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/more" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_margin="5dp"
        android:id="@+id/newLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:padding="3dp"
            android:fontFamily="@font/raleway"
            android:id="@+id/touched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="3dp"
            android:fontFamily="@font/raleway"
            android:id="@+id/no_source_tested_in_FY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="3dp"
            android:fontFamily="@font/raleway"
            android:id="@+id/last_touched_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="3dp"
            android:fontFamily="@font/raleway"
            android:id="@+id/touchedPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="3dp"
            android:fontFamily="@font/raleway"
            android:id="@+id/no_source_tested_in_previous_FY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="3dp"
            android:fontFamily="@font/raleway"
            android:id="@+id/last_previous_touched_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/Green"
            android:fontFamily="@font/raleway"
            android:text="ASSIGN"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/assign"
            android:background="@drawable/rectangle2"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />

    </LinearLayout>

</LinearLayout>